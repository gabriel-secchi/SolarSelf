<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SolarSelf" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SolarSelf" parent="Base.Theme.SolarSelf" />

    <style name="primaryButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/textColorPrimaryButton</item>
    </style>

    <style name="primaryRoundedButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/background_circle</item>
        <item name="android:backgroundTint">@color/primaryInverse</item>
        <item name="android:padding">@dimen/sizeMicro</item>
    </style>

    <style name="actionBar">
        <item name="android:background">@color/toolbar</item>
        <item name="android:elevation">@dimen/sizeMicro</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="iconButtonToolbar" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/textColorPrimaryButton</item>
        <item name="android:layout_margin">@dimen/sizeTiny</item>
        <item name="android:padding">@dimen/sizeTiny</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">end</item>
    </style>
</resources>